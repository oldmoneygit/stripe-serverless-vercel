  <h1>üßº Limpeza de Dom√≠nio Shopify</h1>
  <p>Digite o novo dom√≠nio da loja Shopify:</p>
  <input id="novoDominio" type="text" style="padding:10px;width:300px" placeholder="ex: 602j2f-ig.myshopify.com" />
  <button onclick="trocarDominio()" style="padding:10px 20px;margin-left:10px;">Trocar Tudo</button>
  <pre id="resposta" style="margin-top:30px;color:#0f0;"></pre>

  <script>
    async function trocarDominio() {
      const novoDominio = document.getElementById('novoDominio').value;
      if (!novoDominio) return alert('Coloca essa porra do dom√≠nio novo a√≠!');

      const res = await fetch('/api/update-domain', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ novoDominio })
      });

      const data = await res.json();
      document.getElementById('resposta').textContent = JSON.stringify(data, null, 2);
    }
  </script>
